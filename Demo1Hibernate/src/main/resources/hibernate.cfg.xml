        <property name="hibernate.dialect"> org.hibernate.dialect.MySQL5Dialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/hibernatedb</property>
        <property name="hibernate.connection.username">jakty</property>
        <property name="hibernate.connection.password">Jakty@123</property>
        <property name="hibernate.connection.show_sql">true</property>
        <property name="hibernate.connection.hbm2ddl.auto">create</property>
        <mapping resource="Employee.hbm.xml"/>
    </session-factory>
</hibernate-configuration>